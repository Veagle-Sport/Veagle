doctype html
html(lang="en")
  head
    title Veagle - Soccer Match Recorder
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.4.1/milligram.min.css")
    link(rel="icon" type="image/png" href="/favicon.png")
    style.
      body {
        background: linear-gradient(120deg, #0f0c29, #302b63, #24243e);
        color: white;
        text-align: center;
        font-family: 'Arial', sans-serif;
        overflow: hidden;
      }
      .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        animation: fadeIn 2s ease-in-out;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .lock-icon {
        width: 150px;
        height: 150px;
        background: none;
        border: 4px solid cyan;
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0px 0px 20px cyan;
        position: relative;
        animation: glow 1.5s infinite alternate;
      }
      @keyframes glow {
        from { box-shadow: 0px 0px 10px cyan; }
        to { box-shadow: 0px 0px 30px cyan; }
      }
      .lock-icon::before {
        content: '\1F512'; /* Unicode lock emoji */
        font-size: 80px;
        color: cyan;
      }
      .eagle-icon {
        width: 120px;
        height: 120px;
        background: url('/eagle.png') no-repeat center;
        background-size: contain;
        margin-bottom: 20px;
        filter: drop-shadow(0px 0px 10px rgba(0, 255, 255, 0.8));
        animation: float 3s infinite ease-in-out;
      }
      @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
      }
      footer {
        position: absolute;
        bottom: 10px;
        width: 100%;
        text-align: center;
        font-size: 1.2em;
        color: rgba(0, 255, 255, 0.8);
      }
      footer::before {
        content: 'âš¡';
        margin-right: 5px;
      }
  body
    .container
      .eagle-icon
      h1 Veagle - Record Your Soccer Matches
      .lock-icon
    footer
      p Veagle APIs
